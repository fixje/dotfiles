shell -/bin/bash

# set ctrl-x instead of ctrl-a
escape ^Yy

#pretty window list at bottom
caption always '%{= kg}[%L=%{+u b} %=%{-u W}%?%-Lw%?%45L>%{Y}(%n*%f %t)%?(%u)%?%{W}%+Lw%{+u b} %=%-1=%{-u g}]'

# screens
screen -t ROOT 0 sudo -s
screen -t TOP 1 htop
screen -t NET 2 wicd-curses
screen -t SHELL 3 bash
screen -t SHELL 4 bash
